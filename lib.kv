<DownloadPopup@Popup>:
    background: ''
    background_color: 0.92, 0.75, 1, 1
    title_color: 0.34, 0.14, 0.43
    auto_dismiss: False
    title: "Загрузка данных из файла"
    size_hint: .6, .6

    BoxLayout:
        orientation: "vertical"
        padding: 10

        Label:
            font_size: 20
            text: "Выберите файл"
            size_hint: 1, .18
            color: 0.34, 0.14, 0.43

        FileChooserListView:
            id: filechooser
            on_selection: app.controller.selected(filechooser.selection, label, button)

        Button:
            id: button
            size_hint: 1, .1
            text: "Загрузить"
            font_size: 20
            disabled: False
            on_press:app.controller.load_word(label, button)
            color: 0.34, 0.14, 0.43
            background_color: 0.82, 0.43, 1, 1
            background_normal: ''

        Label:
            id: label
            font_size: 20
            text: ""
            size_hint: 1, .2
            color: 0, .26, .41, 1


        Button:
            size_hint: 1, .1
            text: "Закрыть"
            font_size: 20
            disabled: False
            on_press:root.dismiss()
            color: 0.34, 0.14, 0.43
            background_color: 0.82, 0.43, 1, 1
            background_normal: ''

<RefScreen>
    BoxLayout:
